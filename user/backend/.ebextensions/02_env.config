# Environment variables configuration
# NOTE: Set these values in AWS Elastic Beanstalk Console -> Configuration -> Software -> Environment properties
# DO NOT hardcode sensitive values here

option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    # The following should be set via EB Console or AWS Systems Manager Parameter Store:
    # PORT: 8080 (EB uses 8080 by default)
    # MONGO_URI: your_mongodb_connection_string
    # JWT_SECRET: your_jwt_secret
    # MAILTRAP_TOKEN: your_mailtrap_token
    # EMAIL_FROM: your_email_from
    # EMAIL_FROM_NAME: your_email_from_name
    # CLOUDINARY_API_KEY: your_cloudinary_key
    # CLOUDINARY_API_SECRET: your_cloudinary_secret
    # CLOUDINARY_CLOUD_NAME: your_cloudinary_name
    # DO_SPACES_KEY: your_spaces_key
    # DO_SPACES_SECRET: your_spaces_secret
    # CLIENT_URL: your_client_url
