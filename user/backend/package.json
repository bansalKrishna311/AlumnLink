{
	"name": "alumnlink-backend",
	"version": "1.0.0",
	"description": "Backend for AlumnLink application",
	"main": "server.js",
	"scripts": {
		"dev": "nodemon --max-old-space-size=512 --gc-interval=100 server.js",
		"start": "node --max-old-space-size=512 --gc-interval=100 --expose-gc server.js",
		"start:optimized": "node --max-old-space-size=256 --gc-interval=50 --expose-gc --max-semi-space-size=64 server.js",
		"start:dev": "bash start-optimized.sh",
		"start:win": "start-optimized.bat",
		"cleanup:cache": "node -e \"import('./utils/cache-cleanup.js').then(m => { m.default.clearAllCaches(); console.log('All caches cleared'); process.exit(0); })\"",
		"monitor:memory": "node -e \"import('./utils/memory-monitor.js').then(m => { m.default.start(); console.log('Memory monitoring started. Press Ctrl+C to stop.'); })\"",
		"vercel-build": "echo 'Building for Vercel deployment'",
		"keep-alive": "node utils/external-keepalive.js",
		"m0-keepalive": "node utils/m0-external-keepalive.js",
		"m0-keepalive-stats": "node utils/m0-external-keepalive.js --stats",
		"monitor": "node -e \"import('./lib/dbMonitor.js').then(m => { m.default.startMonitoring(); console.log('Database monitoring started. Press Ctrl+C to stop.'); })\""
	},
	"keywords": [],
	"author": "",
	"type": "module",
	"license": "ISC",
	"engines": {
		"node": ">=18.x"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.856.0",
		"@aws-sdk/s3-request-presigner": "^3.856.0",
		"bcryptjs": "^2.4.3",
		"cloudinary": "^2.4.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^16.5.0",
		"express": "^4.19.2",
		"express-validator": "^7.2.1",
		"jsonwebtoken": "^9.0.2",
		"mailtrap": "^3.4.0",
		"mongoose": "^8.6.1",
		"multer": "^1.4.5-lts.1",
		"serverless-http": "^3.2.0"
	},
	"devDependencies": {
		"nodemon": "^3.1.4"
	}
}
